@page
@model Stutooroo.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].City)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ApplicationUsers) {
        <tr>
            <td>
                @{
                    if (item.ImagePath != null)
                    {
                        <img src="@item.ImagePath" width="100" />
                    }
                    else
                    {
                        <img src="Images/icons8-user-96.png" width="100" />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
