@page
@model Stutooroo.Pages.Users.CustomerUserDetailsModel
@{
	ViewData["Title"] = "Details";
}

<div>
    <h4>Student</h4>
    <dl class="column">
        @if (Model.AppUser.ImagePath != null)
        {
            <img src="@Model.AppUser.ImagePath" height="100" width="100" />
        }
        else
        {
            <img src="/Images/icons8-user-96.png" height="100" width="100" />
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
</div>

@{
    if (Model.CurrentUser.Id == Model.AppUser.Id || User.IsInRole("Admin"))
    {
        <a asp-page="./Delete" asp-route-id="@Model.AppUser.Id"> Delete </a>
    }
}

<hr />
<h3>Favorite Listings</h3>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].PostedAtDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].ExperienceLvl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].HourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].PostedByUser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listings[0].PostedByUser.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Listings)
        {
            <tr>
                <td>
                    <a asp-page="/Listings/Details" asp-route-id="@item.Id">
                        @{
                            var listingImage = Model.Images.FirstOrDefault(m => m.ListingId == item.Id);
                            if (listingImage != null)
                            {
                                <img src="@listingImage.ImagePath" width="100" />
                            }
                            else
                            {
                                <img src="/Images/teacher_11720191.png" width="100" />
                            }
                        }
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedAtDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperienceLvl.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedByUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedByUser.FirstName)
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Listings.Count < 1)
{
    <p>No listings found.</p>
}

