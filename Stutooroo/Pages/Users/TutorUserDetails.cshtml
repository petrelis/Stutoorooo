@page
@model Stutooroo.Pages.Users.TutorUserDetailsModel
@{
	ViewData["Title"] = "Details";
}

<div>
    <h1>Tutor</h1>
    <dl class="column">
        @if(Model.AppUser.ImagePath != null)
        {
            <img src="@Model.AppUser.ImagePath" height="100" width="100" />
        }
        else
        {
            <img src="/Images/icons8-user-96.png" height="100" width="100" />
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Address)
        </dd>
        <h3>Contact Me</h3>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.PhoneNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.PhoneNo)
        </dd>
    </dl>
</div>

@{
    if (Model.CurrentUser != null)
    {
        if (Model.CurrentUser.Id == Model.AppUser.Id || User.IsInRole("Admin"))
        {
            <a asp-page="./Delete" asp-route-id="@Model.AppUser.Id" class="dangerlink"> Delete Your Account </a>
        }
    }
}

<hr />

@section Scripts
{
    @await Html.PartialAsync("/Pages/Listings/_IndexPartial.cshtml", Model.IndexPartialModel);
}
